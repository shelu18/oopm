#include<iostream>
#include<string>
using namespace std;
class student{
	string name;
	string roll_no;
	int year;
	public:
		void ask_details(){
			cout<<"Enter Name : ";
			cin>>name;
			cout<<"Enter Roll no. ";
			cin>>roll_no;
			cout<<"Enter Year : ";
			cin>>year;
		}
		void show_details(){
			cout<<"Student Details : "<<endl;
			cout<<"Name : "<<name<<endl;
			cout<<"Roll no."<<roll_no<<endl;
			cout<<"Year : "<<year<<endl;
		}
};

int main(){
	student somnath;
	somnath.ask_details();
	somnath.show_details();
	return 0;
}
